{
  "name": "city",
  "version": "0.1.0",
  "private": true,
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "db:push": "drizzle-kit push",
    "db:seed": "npx tsx src/lib/db/seed.ts",
    "db:studio": "drizzle-kit studio",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "electron:dev": "bash scripts/patch-electron-plist.sh && concurrently \"pnpm dev\" \"wait-on tcp:3000 && tsc -p tsconfig.electron.json && electron .\"",
    "electron:build": "tsc -p tsconfig.electron.json",
    "dist": "bash scripts/build-electron.sh"
  },
  "build": {
    "appId": "com.city.app",
    "productName": "C.I.T.Y.",
    "copyright": "Copyright Â© 2024",
    "icon": "build/icon.png",
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "build/icon.png",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "files": [
      "dist-electron/**/*",
      "package.json"
    ],
    "directories": {
      "output": "dist"
    },
    "publish": {
      "provider": "github",
      "owner": "qoodeng",
      "repo": "C.I.T.Y."
    },
    "extraResources": [
      {
        "from": ".next/standalone-pkg",
        "to": "server",
        "filter": [
          "!**/*.map"
        ]
      },
      {
        "from": ".next/static",
        "to": "server/.next/static"
      },
      {
        "from": "public",
        "to": "server/public"
      }
    ]
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@tiptap/extension-placeholder": "^3.19.0",
    "@tiptap/pm": "^3.19.0",
    "@tiptap/react": "^3.19.0",
    "@tiptap/starter-kit": "^3.19.0",
    "better-sqlite3": "^12.6.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "dompurify": "^3.3.1",
    "drizzle-orm": "^0.45.1",
    "electron-updater": "^6.7.3",
    "framer-motion": "^12.34.0",
    "lucide-react": "^0.563.0",
    "nanoid": "^5.1.6",
    "next": "16.1.6",
    "next-themes": "^0.4.6",
    "nuqs": "^2.8.8",
    "radix-ui": "^1.4.3",
    "react": "19.2.3",
    "react-day-picker": "^9.13.2",
    "react-dom": "19.2.3",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.3.6",
    "zustand": "^5.0.11"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3",
      "electron",
      "esbuild",
      "msw"
    ]
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.3",
    "@playwright/test": "^1.58.2",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/dompurify": "^3.2.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^5.1.3",
    "@vitest/coverage-v8": "^4.0.18",
    "concurrently": "^9.2.1",
    "drizzle-kit": "^0.31.9",
    "electron": "^40.2.1",
    "electron-builder": "^26.7.0",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "happy-dom": "^20.5.3",
    "jsdom": "^28.0.0",
    "msw": "^2.12.9",
    "playwright": "^1.58.2",
    "shadcn": "^3.8.4",
    "tailwindcss": "^4",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5",
    "vitest": "^4.0.18",
    "wait-on": "^9.0.3"
  }
}